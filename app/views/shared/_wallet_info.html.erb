<div class="card">
  <div class="card-header">
    <h5 class="card-title">Wallet Information</h5>
  </div>
  <div class="card-body">
    <% if current_user.main_wallet.present? %>
      <p>Balance: <%= number_to_currency(current_user.main_wallet.balance) %></p>
    <% else %>
      <p>No main wallet found for the current user.</p>
    <% end %>
  </div>
</div>
